<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/rhythm_splash_logo"
        android:contentDescription="@string/app_name"
        android:layout_gravity="top|end"
        android:alpha="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/album_art"
                android:background="@drawable/album_art_background"
                android:clipToOutline="true"
                android:elevation="6dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Song Title Example"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/widget_on_surface_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Artist Name"
                android:textSize="18sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:alpha="0.9" />

            <TextView
                android:id="@+id/widget_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Album Name"
                android:textSize="14sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:alpha="0.7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_previous"
                android:scaleType="centerInside"
                android:padding="14dp" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:contentDescription="@string/play_pause"
                android:scaleType="centerInside"
                android:padding="18dp"
                android:layout_marginHorizontal="24dp"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_next"
                android:scaleType="centerInside"
                android:padding="14dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>