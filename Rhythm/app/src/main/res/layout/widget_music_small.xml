<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/widget_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical|start">

            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:background="@drawable/album_art_background"
                android:clipToOutline="true"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/widget_song_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Song Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/widget_on_surface_dark"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/widget_artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Artist"
                    android:textSize="12sp"
                    android:textColor="@color/widget_on_surface_variant_dark"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:alpha="0.8" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:elevation="2dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>