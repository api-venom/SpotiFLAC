<?xml version="1.0" encoding="utf-8"?>
<!-- 2x3 Vertical Widget - Tall Layout with Vertical Controls -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Album Art Section -->
        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/album_art"
            android:background="@drawable/album_art_background"
            android:clipToOutline="true"
            android:elevation="3dp"
            android:layout_marginBottom="16dp" />

        <!-- Song Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/widget_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_song_playing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_on_surface_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.1" />

            <TextView
                android:id="@+id/widget_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_artist"
                android:textSize="14sp"
                android:textColor="@color/widget_on_surface_variant_dark"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Controls Section - Vertical Stack -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/widget_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_previous"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_previous"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:elevation="1dp"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_play_arrow"
                android:background="@drawable/widget_button_background_primary"
                android:contentDescription="@string/play_pause"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:elevation="3dp"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_skip_next"
                android:background="@drawable/widget_button_background"
                android:contentDescription="@string/skip_next"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:elevation="1dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>